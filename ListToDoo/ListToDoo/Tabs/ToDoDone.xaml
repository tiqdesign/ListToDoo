<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ListToDoo.Tabs.ToDoDone"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ListToDoo.Models"
    Title="Tamamlanmış Notlar"
    BackgroundColor="#222831"
    Visual="Material"
    mc:Ignorable="d">

    <ContentPage.Content>
        <StackLayout>
            <ListView
                x:Name="lv_todo"
                Margin="10,10,10,10"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All"
                HasUnevenRows="True"
                SelectionMode="None"
                SeparatorColor="#d65a31"
                SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem
                                    Clicked="OnDelete"
                                    CommandParameter="{Binding .}"
                                    IsDestructive="True"
                                    Text="Sil" />
                                <MenuItem
                                    Clicked="ClipBoard"
                                    CommandParameter="{Binding .}"
                                    IsDestructive="True"
                                    Text="Kopyala" />
                            </ViewCell.ContextActions>
                            <Frame
                                Margin="4,4,4,4"
                                BackgroundColor="#eeeeee"
                                BorderColor="LightGray"
                                CornerRadius="10"
                                HasShadow="True">
                                <StackLayout>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="0.4*" />
                                            <ColumnDefinition Width="0.1*" />
                                        </Grid.ColumnDefinitions>

                                        <Label
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            FontSize="20"
                                            HorizontalTextAlignment="Start"
                                            Text="{Binding Title}"
                                            TextColor="#d65a31" />

                                        <Label
                                            Grid.Column="1"
                                            Margin="0,0,10,0"
                                            FontSize="12"
                                            HorizontalOptions="End"
                                            HorizontalTextAlignment="Start"
                                            Text="Öncelik:"
                                            TextColor="#222831"
                                            VerticalOptions="CenterAndExpand" />

                                        <BoxView
                                            x:Name="bv_pri"
                                            Grid.Column="2"
                                            CornerRadius="20"
                                            HeightRequest="2"
                                            HorizontalOptions="StartAndExpand"
                                            MinimumHeightRequest="2"
                                            Color="{Binding Priority}" />

                                    </Grid>

                                    <controls:CheckBox
                                        x:Name="ch_event"
                                        Checked="{Binding IsDone}"
                                        CheckedChanged="Ch_event_CheckedChanged"
                                        CheckedText="{Binding Body}"
                                        DefaultText="Boş"
                                        FontSize="15"
                                        UncheckedText="{Binding Body}" />
                                </StackLayout>
                            </Frame>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>